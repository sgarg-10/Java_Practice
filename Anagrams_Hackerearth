#include <stdio.h>

int main(){
    int t;
    scanf("%d",t);
    char arr1[4],arr2[4];
    int count=0;
   gets(arr1);
    printf("\n");
   gets(arr2);
   
    for(int i=0;i<4;i++)
    {
        
         for(int j=0;j<4;j++)
         {
         if(arr1[i]==arr2[j])
         {
          count++;
          continue;
         }
       
         }
         
    }
    printf("%d",4-count);
}
    
